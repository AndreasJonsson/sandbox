    </repository>
    <repository>
        <id>Maven Snapshots</id>
        <url>http://repository.apache.org/snapshots</url>
        <snapshots>
          <enabled>true</enabled>
        </snapshots>
        <releases>
          <enabled>true</enabled>
        </releases>
      </repository>
      <repository>
        <id>reflections-repo</id>
        <name>Reflections Maven2 Repository</name>
        <url>http://reflections.googlecode.com/svn/repo</url>
      </repository>
  </repositories>
</project>
       
