<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>xwiki-annotation-parent</artifactId>
    <groupId>org.xwiki.platform</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <!-- Should move this out of annotations, in a sandbox independent project -->
  <groupId>org.xwiki.platform</groupId>
  <artifactId>xwiki-annotation-reference</artifactId>
  <name>XWiki Annotation: References Manipulation</name>
  <description>
    Extensions of the standard XWiki references serializers and resolvers to be able to address XWiki content in a 
    single string.
  </description>
  <packaging>jar</packaging>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <!-- Backport dependency needed only when running on versions smaller than 2.2. Remove this dependency when 
         switching to 2.2 platform dependency with http://jira.xwiki.org/jira/browse/XWIKI-4775 fixed. -->
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-annotation-model-backport</artifactId>
      <version>${pom.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
