<property>
<code>document.observe('dom:loaded', function(event) {
  if($('tmAdminSpace') || $('tmEdit')) {
    var dashb = new Dashboard('dashboard-1'); 
  }
});

var Dashboard = Class.create({
  initialize: function(element) {
    this.element = $(element);

    var options = Object.extend({
      colNum: 3
    }, arguments[1] || { });

    this.options = options;
    this.colNum = this.options.colNum;
    
    var columns = [];
    for (var i=1; i &lt;= this.colNum; i++) {
      columns[i] = element + '_dashboardColumn-' + i;
    }

    columns.each(function(columnId) {
      var columnElemIds = '#' + columnId + ' div[class="dashboardCellContainer"]';
      var columnHandleIds = '#' + columnId + ' div[class="dashboardCellHandle"]';
      
      Sortable.create(columnId, {elements:$$(columnElemIds), handles:$$(columnHandleIds), overlap: 'vertical', scroll: window, containment: columns, dropOnEmpty: true, constraint: false, ghosting:true});
    });

    $$('div[class="dashboardCellHandle hidden"]').each(function(elem) { console.log(elem); Element.toggleClassName(elem, 'hidden'); });
  }
});

