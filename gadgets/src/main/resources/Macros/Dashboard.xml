<property>
<code>#template("colorThemeInit.vm")

div.dashboard {
  overflow: hidden;
}

div.dashboardCellContainer {
  padding: 10px 15px;
  margin-bottom:10px;
  padding: 2px;
}

div.dashboardCellContainer div.dashboardCellContent {
  font-size: 0.85em;
  line-height: 1.6em;
  overflow: hidden;
}

div.dashboardCellContainer div.dashboardCellContent li {
  list-style-type: none;
}

div.dashboardCellHandle {
  background-image: url("$xwiki.getSkinFile('icons/datamodel/move.png')");
  background-repeat: no-repeat;
  width: 16px;
  height: 20px;
  float: right;
  margin: 2px;
  cursor: move;
}

div.dashboardColumn {
  float: left;
  margin-right: 10px;
  width:320px;
  min-height: 300px;
  height: auto !important;
  height: 300px;
}

.dropmarker {
  background: $theme.highlightColor;
  border: dashed 1px $theme.menuBackgroundColor;
  width: 318px;
  height: 20px;
}
